	<onload lang="python"><![CDATA[
import classic_gaming

classic_gaming.initialize('config.xml')

item_list = mc.ListItems()
for rom in classic_gaming.get_rom_list():
  item = mc.ListItem(mc.ListItem.MEDIA_UNKNOWN)
  item.SetLabel(rom['name'])
  item.SetPath(rom['path'])
  item.SetThumbnail(rom['thumbnailPath'])
  item.SetProperty('system', rom['system'])
  item_list.append(item)
  print rom['name'], "thumbnail>", rom['thumbnailPath']

mc.GetWindow(14000).GetList(14055).SetItems(item_list)
]]></onload>
